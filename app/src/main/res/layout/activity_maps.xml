<!--xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LinearLayoutOneActivity"-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="1">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="231dp"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_weight="0.98" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips: move your desired area to the screen center"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:textColor="#FF4081" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downloadedMap" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search City"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:onClick="clickRelocated"
        android:background="@color/color2"
        android:textColor="@color/color1"
        android:textSize="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Your Target!"
        android:id="@+id/button"
        android:onClick="clickZoom"
        android:nestedScrollingEnabled="true"
        android:background="@color/color1"
        android:textColor="@color/color2"
        android:textSize="20dp" />

</LinearLayout>