<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
 tools:context=".CanvasDemoActivity"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <com.example.yaoha_000.map.DrawingView
            android:layout_height="290dp"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.97"
            android:id= "@+id/drawView" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color:       "
                android:id="@+id/textView2"
                android:textSize="20dp"
                android:textColor="#006969"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/red"
                android:background="#FF660000"
                android:onClick="changeColor" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/blue"
                android:background="#39f"
                android:onClick="changeColor" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/yellow"
                android:background="#FF6"
                android:onClick="changeColor" />

            <Button
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:id="@+id/black"
                android:background="#000"
                android:onClick="changeColor" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thickness:    "
                android:id="@+id/textView3"
                android:textSize="20dp"
                android:textColor="#006969"/>

            <Button
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="5 px"
                android:id="@+id/button3"
                android:layout_weight="0.07"
                android:background="#ffffff"
                android:hint="5"
                android:onClick="changeThickness"
                android:textColor="@color/color2"/>

            <Button
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:text="10 px"
                android:id="@+id/button4"
                android:layout_weight="0.11"
                android:background="#ffffff"
                android:hint="10"
                android:onClick="changeThickness"
                android:textColor="@color/color1"/>

            <Button
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:text="20 px"
                android:id="@+id/button5"
                android:layout_weight="0.19"
                android:background="#ffffff"
                android:hint="20"
                android:onClick="changeThickness"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <Button
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:text="RESET"
                android:id="@+id/button2"
                android:layout_weight="0.38"
                android:onClick="reset"
                android:background="@color/color1"
                android:textColor="@color/color2"
                android:textSize="20dp" />

            <Button
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:text="Start Running"
                android:id="@+id/button7"
                android:onClick="onClick"
                android:background="@color/color2"
                android:textColor="@color/color1"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
